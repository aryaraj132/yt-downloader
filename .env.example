# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./firebase-service-account.json

# MongoDB Configuration (Use MongoDB Atlas or cloud MongoDB URI)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/yt_downloader?retryWrites=true&w=majority
MONGODB_DB_NAME=yt_downloader

# Redis Configuration (Use Upstash, Redis Cloud, or cloud Redis URI)
REDIS_URI=redis://default:password@your-redis-host:6379/0

# JWT Configuration
JWT_PUBLIC_SECRET=your-public-secret-key-here-change-in-production
JWT_PRIVATE_SECRET=your-private-secret-key-here-change-in-production
# JWT_PRIVATE_EXPIRATION: Duration in seconds for user login sessions
# Example: 604800 (7 days), 2592000 (30 days), 31536000 (1 year)
# Setting to 1 year keeps users logged in for entire year
JWT_PRIVATE_EXPIRATION=604800

# Flask Configuration
FLASK_SECRET_KEY=your-flask-secret-key-here-change-in-production
FLASK_ENV=development
PORT=5000

# Google OAuth (Required for user authentication)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# YouTube API (Required for stream clipping functionality)
YOUTUBE_API_KEY=your-youtube-api-key-here

# Application Configuration
DOWNLOADS_DIR=./downloads
MAX_VIDEO_DURATION=3600
VIDEO_RETENTION_MINUTES=30
CLEANUP_INTERVAL_MINUTES=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Video Download Preferences (Optional)
DEFAULT_VIDEO_FORMAT=mp4
DEFAULT_VIDEO_RESOLUTION=best

