# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./service-account-key.json

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/yt_downloader
MONGODB_DB_NAME=yt_downloader

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_PUBLIC_SECRET=your-public-secret-key-here-change-in-production
JWT_PRIVATE_SECRET=your-private-secret-key-here-change-in-production
JWT_PUBLIC_EXPIRATION=86400
JWT_PRIVATE_EXPIRATION=604800

# Flask Configuration
FLASK_SECRET_KEY=your-flask-secret-key-here-change-in-production
FLASK_ENV=development
PORT=5000

# Application Configuration
DOWNLOADS_DIR=./downloads
MAX_VIDEO_DURATION=3600
VIDEO_RETENTION_MINUTES=30
CLEANUP_INTERVAL_MINUTES=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Video Download Preferences (Optional)
DEFAULT_VIDEO_FORMAT=mp4
DEFAULT_VIDEO_RESOLUTION=best

# YouTube API (Optional - only if metadata fetching is needed)
YOUTUBE_API_KEY=

