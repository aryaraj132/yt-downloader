# MongoDB (shared with API server)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/yt_downloader?retryWrites=true&w=majority
MONGODB_DB_NAME=yt_downloader

# Redis (shared with API server)
REDIS_URI=redis://default:password@your-redis-host:6379/0

# S3 / SeaweedFS (shared with API server)
S3_ENDPOINT_URL=http://your-s3-host:8333
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-east-1
S3_BUCKET_NAME=yt-downloader
S3_KEY_PREFIX=videos/

# Queue names (must match API server)
QUEUE_DOWNLOAD=queue:download
QUEUE_ENCODE=queue:encode

# Worker settings
MAX_RETRIES=3
RETRY_DELAY_SECONDS=30
TEMP_DIR=./tmp
CLEANUP_INTERVAL_HOURS=1
S3_FILE_MAX_AGE_HOURS=24

# Cookies (directory containing cookies.txt)
COOKIES_DIR=./cookiesFile

# Video defaults
DEFAULT_VIDEO_FORMAT=mp4
DEFAULT_VIDEO_RESOLUTION=best

# Firebase / Remote Config
ENVIRONMENT=local
# SERVICE_ACCOUNT_JSON=<paste full JSON here or leave unset for local dev>
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=firebase-service-account.json

# Logging
LOG_LEVEL=INFO
