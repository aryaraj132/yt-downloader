# Copy from root .env and adjust as needed

# MongoDB Configuration (Use MongoDB Atlas or cloud MongoDB URI)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/yt_downloader?retryWrites=true&w=majority
MONGODB_DB_NAME=yt_downloader

# Redis Configuration (shared with worker)
REDIS_URI=redis://default:password@your-redis-host:6379/0

# JWT Configuration
JWT_PUBLIC_SECRET=your-public-secret-key-here
JWT_PRIVATE_SECRET=your-private-secret-key-here
JWT_PRIVATE_EXPIRATION=604800

# Server
PORT=5000
NODE_ENV=production

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# YouTube API Key
YOUTUBE_API_KEY=your-youtube-api-key

# S3 / SeaweedFS (shared with worker)
S3_ENDPOINT_URL=http://your-s3-host:8333
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-east-1
S3_BUCKET_NAME=yt-downloader
S3_KEY_PREFIX=videos/

# Public API
PUBLIC_API_RATE_LIMIT=10
PUBLIC_API_MAX_CLIP_DURATION=40
PUBLIC_API_MAX_ENCODE_DURATION=300

# Queue names (must match worker config)
QUEUE_DOWNLOAD=queue:download
QUEUE_ENCODE=queue:encode

# Application
MAX_VIDEO_DURATION=3600
MAX_UPLOAD_SIZE_MB=500
ALLOWED_VIDEO_FORMATS=mp4,avi,mkv,mov,flv,wmv,webm,m4v,mpg,mpeg,3gp
VIDEO_RETENTION_MINUTES=30
DEFAULT_VIDEO_FORMAT=mp4
DEFAULT_VIDEO_RESOLUTION=best

# Logging
LOG_LEVEL=INFO
